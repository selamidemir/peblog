<form
  <% if(category) { %>
    action="/admin/categories/edit/<%= category.slug %>?_method=PUT"
  <% } %>
  <% if (!category) { %>
    action="/admin/categories/add"
  <% } %>
  method="POST"
  id="category-edit-form"
>
  <div class="mb-3">
    <label for="name" class="form-label">Name</label>
    <input
      type="text"
      class="form-control"
      id="name"
      name="name"
      value="<% if(category) { %> <%= category.name %> <% } %>"
    />
    <div id="nameHelp" class="form-text">Enter the category name.</div>
  </div>
  <div class="mb-3">
    <label for="description" class="form-label">Description</label>
    <textarea
      type="text"
      class="form-control"
      id="description"
      name="description"
      class="category-description"
    ><% if(category) {%> <%= category.description %> <% }%></textarea>
    <div id="descpritionHelp" class="form-text">
      Enter the category description.
    </div>
  </div>

  <button type="submit" class="btn btn-primary">Save</button>
</form>
