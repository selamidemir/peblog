<form <% if(tag) { %>
  action="/admin/tags/<%= tag.slug %>?_method=PUT" <% } %> <% if (!tag) { %>
  action="/admin/tags" <% } %> method="POST" id="tag-edit-form" >
  <div class="mb-3">
    <label for="name" class="form-label">Name</label>
    <input
      type="text"
      class="form-control"
      id="name"
      name="name"
      value="<% if(tag) { %> <%= tag.name %> <% } %>"
    />
    <div id="nameHelp" class="form-text">Enter the tag.</div>
  </div>

  <button type="submit" class="btn btn-primary">Save</button>
</form>
