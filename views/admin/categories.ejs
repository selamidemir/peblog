<%- include('../partials/page_top.ejs') %> <%-
include('../partials/page_header.ejs') %>

<main id="main" data-aos="fade" data-aos-delay="1500">
  <!-- ======= End Page Header ======= -->
  <div class="page-header d-flex align-items-center">
    <div class="container position-relative">
      <div class="row d-flex justify-content-center">
        <div class="col-lg-6 text-center">
          <h2>Categories (<a href="/admin/categories/add">Add</a>)</h2>
        </div>
      </div>
    </div>
  </div>
  <!-- End Page Header -->

  <!-- ======= Categories ======= -->
  <section id="about" class="about">
    <div class="container">
      <div class="row gy-4 justify-content-center">
        <div class="col">
          <div id="wrapper"></div>
        </div>
      </div>
    </div>
  </section>
  <!-- End Categories -->
</main>
<!-- End #main -->

<script>
  const data = JSON.parse(`<%- data %>`);
  new gridjs.Grid({
    columns: [
      {
        name: "Category",
        width: "30%",
      },
      {
        name: "Photos",
        formatter: (cell) =>
          gridjs.html(`<a href="/admin/photos?category=${cell}">Photos</a>`),
      },
      {
        name: "Edit",
        formatter: (cell) =>
          gridjs.html(`<a href="/admin/categories/edit/${cell}">Edit</a>`),
      },
      {
        name: "Delete",
        width: "100%",
        formatter: (cell) =>
          gridjs.html(
            `<a href="/admin/categories/${cell}?_method=DELETE" onClick="return confirm('Are you sure?')">Delete</a>`
          ),
      },
    ],
    data: data,
    pagination: true,
  }).render(document.getElementById("wrapper"));
</script>

