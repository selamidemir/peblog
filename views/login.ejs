<%- include('./partials/page_top.ejs') %> <%-
include('./partials/page_header.ejs') %>

<main id="main">
  <!-- ======= End Page Header ======= -->
  <div class="page-header d-flex align-items-center">
    <div class="container position-relative">
      <div class="row d-flex justify-content-center">
        <div class="col-lg-6 text-center bg-gradient p-3 rounded">
          <h2>Login</h2>

          <div class="row justify-content-center mt-4">
            <div class="col-lg-7">
              <form
                action="/login"
                method="POST"
                role="form"
              >
                <div class="row">
                  <div class="form-group mt-3 mt-md-0">
                    <label for="email">Email</label>
                    <input
                      type="email"
                      class="form-control"
                      name="email"
                      id="email"
                      placeholder="Your Email"
                      required
                    />
                  </div>
                </div>
                <div class="form-group mt-3">
                  <label for="password">Password</label>
                  <input
                    type="password"
                    class="form-control"
                    name="password"
                    id="password"
                    placeholder="Password"
                    required
                  />
                </div>
                
                <div class="my-3">
                  <div class="error-message"><% if(errors) errors %></div>
                </div>
                <div class="text-center">
                  <button class="cta-btn" type="submit">Login</button>
                </div>
              </form>
            </div>
            <!-- End Contact Form -->
          </div>
        </div>
      </div>
    </div>
  </div>
